@model ToDo.Models.User
@{
    ViewData["Title"] = "Registration";
}
<link rel="stylesheet" href="~/css/registration.css" />


<svg class ="line" height="210" width="500">
  <line x1="500" y1="0" x2="500" y2="500" style="stroke:rgb(0,255,0);stroke-width:2" />
  Sorry, your browser does not support inline SVG.
</svg>

        
<div class="d-flex justify-content-end align-items-end container ">
            <div class="col-md-4 col-md-offset-4">
            <form method="post">

            <div class="form-group">
                <label><b>Name</b></label>
                <input asp-for="Name" class="form-control" id="InputName" aria-describedby="nameHelp" placeholder="Enter Name">
               <span class="text-danger"></span>
            </div>            

            <div class="form-group">
                <label><b>Email address</b></label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
               <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label><b>Phone No</b></label>
                <input class="form-control" id="InputPhone" aria-describedby="phoneHelp" placeholder="Enter Phone No">
               <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label><b>Password</b></label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span class="text-danger"></span>
            </div>
            <!--
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            
            
            <button type="submit" class="btn btn-primary">Sign-Up</button>
            -->
            <a class="btn btn-primary">Sign-Up</a>
            <button type="submit" class="btn btn-success" id="btn-signin">Sign-In</button>
            </form>
            </div>
</div>