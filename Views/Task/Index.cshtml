@model ToDo.Models.Work
@{
    ViewData["Title"] = "Task";
}
<body>
   
    <div class="container-fluid">
        <div class="row">
        <!-- Left Card -->
            <div class="col-sm-3">
                <div class="card">
                <div class="card-header">
                    Task
                </div>
                <form action="/Task/Create" method="post">
                <div class="card-body">
                    <h5 class="card-title">Add a Task</h5>
                        <div class="form-group">
                            <label for="taskTitle">Task Title:</label>
                            <input asp-for="Name" type="text" class="form-control" id="taskTitle" />
                        </div>

                        <div class="form-group">
                            <label for="date">Pick Date:</label>
                            <input asp-for="CreateDate" type ="text" class="form-control" id="datepicker" />
                        </div>

                        <div class="form-group">
                            <label for="date">Due Time:</label>
                            <input asp-for="Time" type="text" class="form-control" id="timepicker" />
                        </div>

                        <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                        </div>
                </div>
                </form>
                </div>
            </div>
        <!-- Middle Card -->
            <div class="col-sm-6">
                <div class="card">
                <div class="card-header">
                    Today
                </div>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                </div>
            </div>
        <!-- Right Card -->
            <div class="col-sm-3">
                <div class="card">
                <div class="card-header">
                    Featured
                </div>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>
    
    //Timepicker
    $( "#timepicker" ).timepicker({
        timeFormat: 'HH:mm a',
        interval: 15,
        defaultTime: '11',
        dynamic: true,
        dropdown: true,
        scrollbar: true
    });
    //Datepicker

    $( function() {
    $( "#datepicker" ).datepicker();
    } );
    </script>
}

